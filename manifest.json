{
  "manifest_version": 2,

  "name": "Click Freeze",
  "description": "This extension boosts your productivity by cutting down unnecessary click distractions",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "freezer.js"]
    }
  ],
  "web_accessible_resources": [
    "jquery.js","cross.png"
  ],

  "browser_action": {
    "default_title": "Click Freeze",
    "default_icon": "buddha.png"
  }
}